<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edu.javeriana.tandemsquad.tandem.HomeActivity">

    <include layout="@layout/toolbar_search" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/home_share"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_share"/>

        <ImageButton
            android:id="@+id/home_type"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_lock"/>

        <ImageButton
            android:id="@+id/home_members"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_people"/>

        <ImageButton
            android:id="@+id/home_begin"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_begin"/>

        <ImageButton
            android:id="@+id/home_history"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_historias"/>
    </LinearLayout>


</LinearLayout>
